<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>
<!--This ejs Deprecated-->
    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% errorMessages.forEach(errorMessage=>{ if(errorMessage.msg){ %>
                    <div class="user-message user-message--error">
                        <%= errorMessage.msg %>
                    </div>
                    <%}}) %>
                        <form class="product-form" action="/admin/add-product" method="POST">
                            <div class="form-control">
                                <label for="title">Title</label>
                                <input class="<%=errorMessages.find(e=>e.param==='title')?" invalid":""%>" type="text" name="title" id="title" value="<%=previousInput.title%>">
                            </div>
                            <div class="form-control">
                                <label for="image_url">Image URL</label>
                                <input class="<%=errorMessages.find(e=>e.param==='image_url')?" invalid":""%>" type="text" name="image_url" id="image_url" value="<%=previousInput.image_url%>">
                            </div>
                            <div class="form-control">
                                <label for="price">Price</label>
                                <input class="<%=errorMessages.find(e=>e.param==='price')?" invalid":""%>" type="number" name="price" id="price" step="0.01" value="<%=previousInput.price%>">
                            </div>
                            <div class="form-control">
                                <label for="description">Description</label>
                                <textarea class="<%=errorMessages.find(e=>e.param==='description')?"invalid":""%>" name="description" id="description" rows="5"><%=previousInput.description%></textarea>
                            </div>

                            <button class="btn" type="submit">Add Product</button>
                        </form>
            </main>
            <%- include('../includes/end.ejs') %>