<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% errorMessages.forEach(errorMessage=>{ if(errorMessage.msg){ %>

                    <div class="user-message user-message--error">
                        <%= errorMessage.msg %>
                    </div>
                    <%}}) %>
                        <form class="login-form" action="/reset" method="POST" novalidate>
                            <div class="form-control">
                                <label for="email">E-mail</label>
                                <input class="<%=errorMessages.find(e=>e.param==='email')?" invalid":""%>" type="email"
                                name="email" id="email" value="<%=previousInput.email%>">
                            </div>
                            <button class="btn" type="submit">Reset Password</button>
                        </form>
            </main>
            <%- include('../includes/end.ejs') %>