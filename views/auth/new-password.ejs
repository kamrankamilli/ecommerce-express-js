<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% errorMessages.forEach(errorMessage=>{ if(errorMessage.msg){ %>

                    <div class="user-message user-message--error">
                        <%= errorMessage.msg %>
                    </div>
                    <%}}) %>
                        <form class="login-form" action="/new-password" method="POST" novalidate>
                            <div class="form-control">
                                <label for="password">Password</label>
                                <input class="<%=errorMessages.find(e=>e.param==='password')?"invalid":""%>" type="password"  name="password" id="password" value="<%=previousInput.password%>">
                            </div>
                            <input type="hidden" name="userId" value="<%= userId %>">
                            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                            <button class="btn" type="submit">Update Password</button>
                        </form>
            </main>
            <%- include('../includes/end.ejs') %>